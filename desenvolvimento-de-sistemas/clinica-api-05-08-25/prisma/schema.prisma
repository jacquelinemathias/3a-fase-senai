generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:senai@127.0.0.1:3306/clinicadb"
}

// Tabela usuario
model Usuario{
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  cargo String
}

// Tabela prontuario
model Prontuario{
  id Int @id @default(autoincrement())
  descricao String
  data DateTime
  medico_responsavel_id Int
  paciente_id Int
  paciente_coluna Paciente @relation(fields: [paciente_id], references [id])
  medico_coluna Usuario @relation(fields [medico_responsavel_id], references[id])
}

// Tabela consulta
model Consulta{
  id Int @id @default(autoincrement())
  motivo_consulta String
  data_consulta DateTime
  observacoes String
  medico_responsavel_id Int
  paciente_id Int
  paciente_coluna Paciente @relation(fields: [paciente_id], references [id])
}

// Tabela paciente
model Paciente{
  id Int @id @default(autoincrement())
  nome String
  cpf String
  telefone Int
  email String
  data_nascimento DateTime
  responsavel String?
  sexo String
}

// Tabela exame
model Exame{
  id Int @id @default(autoincrement())
  tipo_exame String
  resultado_exame String
  data_exame DateTime
  link_arquivo String
  observacoes String
  paciente_id Int
  paciente_coluna Paciente @relation(fields: [paciente_id], references [id])
}